<Window x:Class="Divisas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Divisas"
        mc:Ignorable="d"
        Title="Conversor de divisas en .NET" Height="300" Width="400">
    <Grid>
        <TabControl>
            <TabItem Header="USD a MXN">
                <Grid Background="#FFF7A270">
                    <Grid>
                        <Label x:Name="lbl_headerDolarPeso" Content="Ingrese una cantidad en Doláres:" HorizontalAlignment="Left" Margin="0,35,0,0" VerticalAlignment="Top" Width="167" FontWeight="Bold" Height="23" FontSize="10"/>
                        <Label x:Name="lbl_DolarPeso" Content="" HorizontalAlignment="Center" Margin="4,73,0,0" VerticalAlignment="Top" Width="393" FontSize="32" FontWeight="Bold" Height="56" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        <TextBox x:Name="txt_DolarPeso" HorizontalAlignment="Left" Margin="167,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" Height="18" TextAlignment="Center"/>
                        <Label Content="USD" HorizontalAlignment="Left" Margin="281,35,0,0" VerticalAlignment="Top" Height="24" Width="33" FontSize="10" IsEnabled="False"/>
                        <Button Content="Convertir" HorizontalAlignment="Left"  Click="Btn_ConvertirDolar" Margin="167,165,0,68"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="MXN a USD">
                <Grid Background="#FFFFF266">
                    <Label x:Name="lbl_headerPesoDolar" Content="Ingrese una cantidad en Pesos:" HorizontalAlignment="Left" Margin="3,29,0,0" VerticalAlignment="Top" Width="156" FontWeight="Bold" Height="21" FontSize="10"/>
                    <Label x:Name="lbl_PesoDolar" Content="" HorizontalAlignment="Center" Margin="10,59,0,0" VerticalAlignment="Top" Width="383" FontSize="32" FontWeight="Bold" Height="53" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <TextBox x:Name="txt_PesoDolar" HorizontalAlignment="Left" Margin="159,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18" TextAlignment="Center"/>
                    <Label Content="MXN" HorizontalAlignment="Left" Margin="284,28,0,0" VerticalAlignment="Top" Height="26" Width="40" IsEnabled="False"/>
                    <Button Content="Convertir" HorizontalAlignment="Left"  Click="Btn_ConvertirPeso" Margin="172,147,0,84"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>